<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginEnd="@dimen/achi_card_magin_small"
        android:layout_marginLeft="@dimen/achi_card_magin_small"
        android:layout_marginRight="@dimen/achi_card_magin_small"
        android:layout_marginStart="@dimen/achi_card_magin_small"
        android:layout_marginTop="@dimen/achi_card_magin_middle"
        app:cardUseCompatPadding="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:scaleX="25"
            android:scaleY="1.4"
            android:src="@drawable/ic_bookmark_black" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:layout_margin="3dp"
            android:src="@drawable/ic_timer" />

        <com.lzjlxebr.hurrypush.ui.custom.HurryPushTimerView
            android:id="@+id/hurry_push_timer_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/achi_card_magin_large"
            android:paddingTop="@dimen/achi_card_magin_large"
            app:clockTheme="@style/clockTheme"
            app:divider1Width="@dimen/divider1_width"
            app:divider2Width="@dimen/divider2_width"
            app:hourWidth="@dimen/hour_width"
            app:minuteWidth="@dimen/minute_width"
            app:secondWidth="@dimen/second_width"
            app:timerWidth="@dimen/timer_width" />

    </android.support.v7.widget.CardView>
</RelativeLayout>

